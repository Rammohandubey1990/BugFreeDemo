<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">



<android.support.v7.widget.CardView

    android:id="@+id/card_group"
android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/lyt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"

            android:src="@drawable/boy"
            android:id="@+id/iv_group"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">




        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/iv_group"
            android:text="Group Name : BugFreeRam"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />
        <TextView
            android:id="@+id/textViewShortDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"

            android:layout_toRightOf="@id/iv_group"
            android:text="Status : OnLine"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
        <TextView
            android:textColor="@android:color/holo_blue_bright"
            android:id="@+id/tv_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewShortDesc"

            android:layout_toRightOf="@id/iv_group"
            android:text="Public ID : 12345"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

    <LinearLayout

        android:layout_marginTop="10dp"
        android:id="@+id/lyt_img_group"
        android:layout_below="@+id/card_group"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/img_add"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/ic_plus_st" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/img_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/boy" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/img_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Name" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:src="@drawable/boy" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="About" />

        </LinearLayout>

    </LinearLayout>

    <TextView

        android:id="@+id/tv_exp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/button_focused"
        android:text="Total Expensive"
        android:layout_below="@+id/lyt_img_group"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_enter"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/button_focused"
        android:text="Enter"
        android:layout_below="@+id/tv_exp"
        android:layout_width="200dp"
        android:layout_height="40dp" />

    <TextView
        android:layout_marginTop="20dp"

        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:background="@drawable/button_focused"
        android:text="Add Expensive"
        android:layout_below="@+id/tv_enter"
        android:layout_width="200dp"
        android:layout_height="40dp" />






</RelativeLayout>


