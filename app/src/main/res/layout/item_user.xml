<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <import type="android.view.View" />
        <variable
            name="userViewModel"
            type="com.example.bugfreeram.samyak.viewModel.UserViewModel">
        </variable>
    </data>

    <android.support.v7.widget.CardView
        app:cardElevation="5dp"
        android:layout_margin="@dimen/spacing_huge"
        android:id="@+id/item_people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/spacing_large">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_small"
            android:orientation="vertical">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_people"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
             />

            <TextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/spacing_medium"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="BugFreeRam"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/label_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_name"
                android:layout_below="@+id/label_name"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                tools:text="0729-256-147"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/label_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/label_phone"
                android:layout_below="@+id/label_phone"
                android:layout_marginStart="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_small"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                tools:text="bugfree@gmail.cm"

                tools:ignore="RtlCompat" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>