<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddPost">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_add_post"
        android:layout_marginTop="18dp"
        android:layout_width="100dp"
        android:src="@drawable/boy"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp" />


    <EditText
        android:id="@+id/edt_title"
        android:textSize="18dp"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center"
        android:layout_below="@+id/img_add_post"
        android:hint="Programmer Pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText

        android:id="@+id/edt_desc"
        android:textSize="18dp"
        android:lines="1"
        android:maxLines="1"
        android:gravity="center"
        android:layout_below="@+id/edt_title"
        android:hint="Here Describe about to realted post "
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:background="@drawable/button_focused"
        android:text="Post "
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/edt_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>