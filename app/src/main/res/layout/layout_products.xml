<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <RelativeLayout
        android:id="@+id/lyt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/lyt_top_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/boy" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView"
            android:text="BugFreeRam"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewShortDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView"
            android:text="Date : 4:36 am"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </LinearLayout>

        </LinearLayout>





        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/img_back_card"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_below="@+id/lyt_top_sec"
            android:background="@drawable/ic_launcher_background"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/img_back_card"
            android:orientation="horizontal">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/lyt_like"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


                <ImageView


                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:id="@+id/img_like"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/like" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/tv_like"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_like"
                    android:text="Like" />

            </LinearLayout>


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">


            <ImageView
                android:padding="4dp"
                android:id="@+id/img_coment"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/comment" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_coment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_coment"
                android:text="Comment" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>

